<h2>Available drones</h2>
<div class="row">
{{#each dronesFromDb}}
<div class="cards">
<h3>{{name}}</h3>

<ul>
    <li>Propellers : {{propellers}}</li>
    <li>Speed : {{maxSpeed}}</li>
</ul>

<a href="/drones/create"> Create Drone</a>
<a href="/drones/{{_id}}/edit"> Edit Drone</a>
<form action='/drones/{{_id}}/delete' method="post">
<button>Delete</button>
</form>

</div>
{{/each}}
</div>

